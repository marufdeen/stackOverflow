{
  "name": "stack-overflow",
  "version": "1.0.0",
  "description": "",
  "main": "sever.js",
  "scripts": {
    "start": "yarn serve",
    "build": "rm -rf dist && yarn build-ts && yarn migrate",
    "build:prod": "yarn write:file && yarn build-ts",
    "serve": "node dist/program.js",
    "start:prod": "yarn write:file && yarn build && yarn start",
    "start:dev": "yarn rm-db:config && yarn write:file && yarn build && yarn watch",
    "rm-db:config": "rm -rf src/sequelize.json",
    "migrate": "sequelize db:migrate",
    "migrate:pro": "NODE_ENV=production sequelize db:migrate",
    "unmigrate:pro": "NODE_ENV=production sequelize db:migrate:undo:all",
    "unmigrate": "sequelize db:migrate:undo:all",
    "unmigrate-last": "sequelize db:migrate:undo",
    "seed": "yarn seed-undo && sequelize db:seed:all",
    "seed-undo": "sequelize db:seed:undo:all",
    "watch-node": "nodemon dist/Program.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node-Express\" -c \"blue.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "yarn test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "write:file": "ts-node src/scripts/writeSequelizeConfig.ts",
    "scaffold": "npx sequelize-cli model:generate --name"
  },
  "author": "maruf",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "mysql2": "^2.2.5",
    "sequelize": "5.21.4",
    "sequelize-cli": "^6.2.0",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.1.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/morgan": "^1.9.2",
    "@types/mysql": "^2.15.18",
    "@types/sequelize": "^4.28.9",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.2",
    "chai": "^4.3.3",
    "chai-http": "^4.3.0",
    "mocha": "^8.3.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^15.1.0",
    "supertest": "^6.1.3"
  }
}

